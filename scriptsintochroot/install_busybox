for binary in `busybox --list-full`
do
	command=`dpkg --search /$binary`
	if [ $? -eq 0 ];then

		package=`busybox echo $command | busybox cut -d: -f1`
		if [ $package != "dpkg" ];then
		echo "'$package'"

			busybox echo "[I] removing files from package $( busybox echo $command | busybox cut -d: -f1 ) ( /$binary )"


			for bintodel in `dpkg -L $( busybox echo $command | busybox cut -d: -f1 )`
			do
				if [ -f $bintodel ];then
					echo "[I] removing $bintodel"
					/bin/busybox rm -rf $bintodel
				fi
			done
		fi

	fi

	/bin/busybox rm -rf /$binary
done

for binary in `busybox --list-full`
do
	echo "[I] Creating /$binary"
	/bin/busybox ln -s /bin/busybox /$binary
done
